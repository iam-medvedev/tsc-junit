{
  "name": "tsc-junit",
  "version": "1.0.0",
  "main": "./bin/run",
  "description": "JUnit report generator for typescript",
  "repository": "https://github.com/iam-medvedev/tsc-junit.git",
  "homepage": "https://github.com/iam-medvedev/tsc-junit#readme",
  "bugs": "https://github.com/iam-medvedev/tsc-junit/issues",
  "author": "Ilya Medvedev <ilya@medvedev.im>",
  "license": "WTFPL",
  "bin": "./bin/run",
  "files": [
    "dist/*",
    "bin/*",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "commit": "git-cz",
    "dev": "ts-node ./bin/dev",
    "start": "node ./bin/run",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test": "jest --watch",
    "types": "tsc --noEmit"
  },
  "dependencies": {
    "@aivenio/tsc-output-parser": "^2.1.1",
    "junit-xml": "^1.2.0",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/yargs": "^17.0.33",
    "cz-conventional-changelog": "^3.3.0",
    "git-cz": "^4.9.0",
    "husky": "^7.0.4",
    "jest": "^30.0.5",
    "jest-junit": "^16.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "tsc",
    "typescript",
    "junit",
    "report"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "volta": {
    "node": "24.6.0",
    "yarn": "1.22.22"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@4.9.2"
}
